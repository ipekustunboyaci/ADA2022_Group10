{
  "$schema": "http://www.krakend.io/schema/v3.json",
  "version": 3,
  "output_encoding": "json",
  "name": "ConvenienceShopping",
  "port": 8081,
  "endpoints": [
    {
      "endpoint": "/inventory/{store_id}",
      "method": "GET",
      "output_encoding": "json",
      "backend": [
        {
          "url_pattern": "/inventory/seed",
          "encoding": "json",
          "method": "GET",
          "host": [
            "http://inventory_service_ct:5002/"
          ],
          "disable_host_sanitize": false
        }
      ]
    },
    {
      "endpoint": "/orders/{id}",
      "method": "GET",
      "extra_config": {
        "proxy": {
          "sequential": true
        }
      },
      "output_encoding": "json",
      "backend": [
        {
          "url_pattern": "/orders/{id}",
          "encoding": "json",
          "method": "GET",
          "host": [
            "http://order_record_service_ct:5000/"
          ],
          "disable_host_sanitize": false,
          "mapping": {
            "product_type": "type"
          }
        },
        {
          "url_pattern": "/products/{resp0_type}",
          "encoding": "json",
          "method": "GET",
          "host": [
            "http://inventory_service_ct:5000/"
          ],
          "disable_host_sanitize": false
        }
      ]
    }
  ]
}